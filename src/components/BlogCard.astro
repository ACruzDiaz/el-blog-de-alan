---
const {title, category, image, date, views, url_post, from = "/tags/", pathname = ""} = Astro.props;
let content = [];
const pathnameList = pathname.trim().split("/").filter(el => el);
console.log(pathnameList);
---
<article class="flex flex-col dark:bg-gray-50">
  <a rel="noopener noreferrer" href={url_post} aria-label="Te nulla oportere reprimique his dolorum">
    <img alt={title} class="object-cover w-full h-52 dark:bg-gray-500" src={image}>
  </a>
  <div class="flex flex-col flex-1 p-6">
    <div class="flex flex-row gap-1">
      {
        category.map((el) =>
            (<a rel="noopener noreferrer" href={from + el.trim().toLowerCase()+"/"} class="text-xs tracking-wider uppercase hover:underline dark:text-violet-600">{el}</a>)
        )

      }

    </div>

    <h3 class="flex-1 py-2 text-lg font-semibold leading-snug">{title}</h3>
    <div class="flex flex-wrap justify-between pt-3 space-x-2 text-xs dark:text-gray-600">
      <span>{date}</span>
      <span>{views} views</span>
    </div>
  </div>
</article>



