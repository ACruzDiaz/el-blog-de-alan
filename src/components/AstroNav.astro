---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
  StickyHeader
} from "astro-navbar";
---

<StickyHeader
  class="sticky top-0 border-b z-20 transition-all"
  scrollY={40}
  defaultClass="py-3 border-transparent bg-green-400"
  activeClass="py-2 bg-white/75 border-gray-100 backdrop-blur-lg">
<div class="lg:flex justify-between p-5 gap-5 mx-auto container ">
  <Astronav closeOnClick>
    <div class="flex w-full lg:w-auto justify-between">
      <a id = "tituloLogo" class="text-3xl font-extrabold" href="/">El blog de Alan</a>
      <div class="block lg:hidden">
        <MenuIcon class="w-8 h-8 text-gray-900" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        <li>
          <a class="font-bold text-xl" href="/">Música</a>
        </li>
        <li>
          <Dropdown class="group">
            <button class="flex items-center">
              <span class="font-bold text-xl">+Info</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="5"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute bg-green-200 top-2 w-40 border shadow rounded p-2">
                <ul>
                  <li>
                    <a class="font-bold" href="/sobre-el-autor">Sobre el autor</a>
                  </li>
                  <li>
                    <a class="font-bold" href="/sobre-el-blog">Sobre el blog</a>
                  </li>
                    <DropdownSubmenu class="group/submenu">
                      <button class="flex w-full items-center justify-between">
                        <span class="font-bold"> Otros</span>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="3"
                          stroke="currentColor"
                          class="w-3 h-3 mt-0.5 group-open/submenu:rotate-180">
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                        </svg>
                      </button>
                      <DropdownItems class="relative">
                        <ul
                          class="lg:absolute bg-green-100 top-0 left-full w-40 border shadow rounded p-2">
                          <li>
                            <a href="/sobre-la-musica">Sobre la música</a>
                          </li>
                          <li>
                            <a href="/sobre">Sobre...</a>
                          </li>
                        </ul>
                      </DropdownItems>
                    </DropdownSubmenu>

              </div>
            </DropdownItems>
          </Dropdown>
          <li>
            <a class="font-bold text-xl" href="/blog">Blog</a>
          </li>
          <li>
            <a class="font-bold text-xl" href="/contact">Contacto</a>
          </li>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
</StickyHeader>

<style>
  svg{
    margin-left: 3px;
  }
  img{
    height: 25px;
  }
  /* #tituloLogo{
    font-size: x-large;
    font-weight: 800;
  } */

</style>