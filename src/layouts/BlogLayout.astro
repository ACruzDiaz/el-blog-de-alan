---
import MainLayout from "../layouts/MainLayout.astro"
const { title, pubDate, coverurl } = Astro.props;
---

<MainLayout title = {title}>

  <main class="container max-w-2xl p-6 mx-auto space-y-6 sm:space-y-12">
    <h1 class="text-4xl font-semibold sm:text-4xl group-hover:underline group-focus:underline">{title}</h1>
    <span class="text-xs dark:text-gray-600">{pubDate}</span>
    <img src={coverurl} alt={title} class="">
    <slot/>
</main>
</MainLayout>

<style>
  h1{
    -webkit-text-size-adjust: 100%;
    color: rgba(0,0,0,.75);
    font-family: Lato,Helvetica Neue,Helvetica,sans-serif;
    font-variant-ligatures: common-ligatures;
    -webkit-font-smoothing: antialiased;
    tab-size: 4;
    text-rendering: auto;
    box-sizing: border-box;
    font-size: 2em;
    margin: 1.8em 0;
    line-height: 1.3;
    margin-top: 0;
    border-bottom: 1px solid lightgray;
  }
  p{
    color: green;
  }
</style>