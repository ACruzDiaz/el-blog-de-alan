---
// library imports
import { Image } from 'astro:assets';

interface Props {
  text: string;
  href: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
  classes?: string;
}

const {
  text,
  href,
  icon,
  classes,
  ...rest
} = Astro.props as Props;
---

<a
  href={href}
  class:list={[
    "link",
    classes,
  ]}
  {...rest}
>
  {
    icon && icon.side === "left" && (
      <Image 
        src={icon.name}
        alt="Logo"
        height="24" 
        width="24" 
      />
    )
  }

  <span>{text}</span>

  {
    icon && icon.side === "right" && (
      <Image 
        src={icon.name} 
        alt="Logo"
        height="24" 
        width="24" 
      />
    )
  }
</a>
