---
//Navigation Data imports
import { navData} from "../data/navData.js"
import  DropDownMenu  from "../components/DropDownMenu.astro"
import Link from "./Link.astro"
//Page's icon
const icon_source = "/favicon.svg"

---
<header>
    <nav>
        <ul>
            {
                navData.map((item, index) => 
                {
                    const newLink =
                    <Link
                        text = {item.name}
                        href = {item.path}
                        classes= "appearance-none py-2 px-4 bg-purple-500 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
                        data-navLink
                    />;
                    
                    const newSubData = item.subPages?.map((subItem, subIndex) =>      
                        <DropDownMenu title = "item">
                                <a 
                                href= {subItem.path} 
                                class="block px-4 py-2 text-sm text-gray-700" 
                                role="menuitem" 
                                tabindex="-1" 
                                id={"menu-item-" + subIndex}>
                                {subItem.name}</a>
                        </DropDownMenu>       

                )
            
            
                
                })
                
            }
        </ul>
    </nav>
    
</header>

